        {#- last posts ~#}
        <section class="lastposts typeset">
          <h2>{% trans %}Last posts{% endtrans %}</h2>
          <ul class="list list--posts">
            {%- for post in site.pages.showable|filter_by('section', 'blog')|sort_by_date|slice(0, 4) ~%}
            <li class="item item--post">
              <a href="{{ url(post) }}">{{ post.title }}</a>
            </li>
            {%- endfor ~%}
          </ul>
        </section>