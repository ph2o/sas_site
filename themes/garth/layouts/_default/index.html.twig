{% extends ['page.html.twig', '_default/page.html.twig'] %}

{% block content %}
<article class="page typeset">
  {{ page.content }}
</article>
{% for post in site.pages|filter_by('section', 'blog')|sort_by_date|slice(0, 1) %}
{% include 'partials/post-item.html.twig' with {'page': page, 'post': post} only %}
{% endfor %}
{% endblock content %}